# Database (Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://neondb_owner:your-password@your-project.us-west-2.aws.neon.tech/neondb?sslmode=require
POSTGRES_HOST=your-project.us-west-2.aws.neon.tech
POSTGRES_PORT=5432
POSTGRES_USER=neondb_owner
POSTGRES_PASSWORD=your-password
POSTGRES_DB=neondb

# JWT Authentication (REQUIRED - generate a secure random key)
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# SMTP Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@crm.local
SMTP_USE_TLS=true

# Seed Data (creates demo and admin accounts on startup)
# demo@demo.com / demo123 - Demo account with rich sample data for showcasing
# admin@admin.com / admin123 - Clean admin account with zero data for testing
SEED_ON_STARTUP=true

# Application
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
DEBUG=true
